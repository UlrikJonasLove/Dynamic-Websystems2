@model Tags

@{
    ViewData["Title"] = "Ny hashtag";
    var id = Context.Request.Path.Value.ToString();
    id = id.Substring(id.LastIndexOf("/") + 1);
}

    <a class="btn btn-secondary" href="#" onclick="history.back()">Tillbaka</a>

<form class="form-block" onsubmit="return sendData(this, 'NewTodoTag')">
    <input type="hidden" name="todoId" value="@id" />

    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control"></textarea>
    </div>


    <div class="form-group text-right">
        <input type="submit" class="btn btn-secondary" value="Skicka" />
    </div>
</form>

